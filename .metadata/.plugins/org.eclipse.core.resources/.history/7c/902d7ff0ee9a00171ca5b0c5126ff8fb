package br.com.unitri.posjava.threads;

public class Orquestrando {

	public static void main(String[] args) throws InterruptedException {
		
		new Thread() {
			
			public void run() {
				
				Buffer.cache(String.valueOf(System.currentTimeMillis()));
			}
			
		}.start();
		
		meuBuffer.start();
		
		synchronized(meuBuffer){
			meuBuffer.wait();
		}
		
		
		
		ImpressoraCache impressoraCache = new ImpressoraCache();
		
		impressoraCache.start();
		
		synchronized (impressoraCache) {
			impressoraCache.wait();
		}
		
		
		
		
		
		
		
		
		
	}
	
}
