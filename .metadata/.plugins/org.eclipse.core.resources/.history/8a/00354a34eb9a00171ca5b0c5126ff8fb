package br.com.unitri.posjava.threads;

public class Orquestrando {

	public static void main(String[] args) {
		
		Buffer meuBuffer = new Buffer();
		
		Thread leitura = new Thread() {
			
			public void run() {
				
				try {
					meuBuffer.imprime();
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
				
			}
			
		}.start();
		
		
		
	}
	
}
