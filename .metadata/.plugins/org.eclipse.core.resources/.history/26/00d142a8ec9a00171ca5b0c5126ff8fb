package br.com.unitri.posjava.threads;

public class Orquestrando {

	public static void main(String[] args) throws InterruptedException {
		
		Buffer meuBuffer = new Buffer();
		
		for(int i=0;i<200;i++) {
			
			new Thread() {
				
				public void run() {
					
					meuBuffer.cache(String.valueOf(System.currentTimeMillis()));
					
				}
				
			}.start();
			
		}
		
		Thread impressao = new Thread() {
			
			public void run() {
				
				try {
					meuBuffer.imprime();
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
				
			}
			
		};
		
		impressao.start();
		impressao.wait();
		
		
		
		
		
	}
	
}
