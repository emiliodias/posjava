package br.com.unitri.posjava.threads;

import java.util.ArrayList;
import java.util.List;

public class Buffer {
	
	private List<String> buffer = new ArrayList<String>();
	
	
	public void imprime() throws InterruptedException {
		
		while(true) {
			
			while(buffer.size() < 100)
				
			
			String valor = buffer.remove(0);
			
			System.out.println(valor);
			
		}
		
	}
	
	public void cache(String valor) {
		
		buffer.add(valor);
		
		if(buffer.size() >= 100)
			notify();
		
	}

}
