package br.com.unitri.posjava.java8;

import java.util.Arrays;
import java.util.List;
import java.util.function.Consumer;

public class TestesListas {

	public static void main(String[] args) {

		Usuario user1 = new Usuario("Usuário 1", 150);
		Usuario user2 = new Usuario("Usuário 2", 120);
		Usuario user3 = new Usuario("Usuário 3", 190);

		List<Usuario> usuarios = Arrays.asList(user1, user2, user3);

		for (Usuario u : usuarios) {
			System.out.println(u.getNome());
		}

		usuarios.forEach(new Consumer<Usuario>() {

			@Override
			public void accept(Usuario u) {

				System.out.println(u.getNome());

			}
		});

		usuarios.forEach((Usuario u) -> {System.out.println(u); int x =1; System.out.println(x);});
		
		List<String> strings = Arrays.asList("s1", "s2", "s3");

		Consumer<String> c1 = (u) -> System.out.println("Consumidor 1: " + u);
		Consumer<String> c2 = (u) -> System.out.println("Consumidor 2: " + u);
		
		c1 = c1.andThen(c2).andThen(c1).andThen(c2).andThen(c1);
		
		strings.forEach(c1);
		
		String.CASE_INSENSITIVE_ORDER.compare(o1, o2);
		
	}

}
